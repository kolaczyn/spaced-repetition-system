{
  "tasks": {
    "run": "deno run --allow-net --allow-env ./src/main.ts",
    "test": "deno test ./src",
    "test:integration": "deno test --allow-net ./integration",
    "test:all": "deno test --allow-net ./src ./integration",
    "compile": "deno compile --allow-net ./src/main.ts --output bin/main",
    "format": "deno fmt --check",
    "ci": "deno task test && deno task test:integration && deno task format && deno task compile"
  }
}

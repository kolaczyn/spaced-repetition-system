{
  "tasks": {
    "run": "deno run --allow-net main.ts",
    "test": "deno test --ignore=integration_tests",
    "test:integration": "deno test --allow-net ./integration_tests",
    "compile": "deno compile --allow-net main.ts --output bin/main",
    "format": "deno fmt --check",
    "ci": "deno task test && deno task test:integration && deno task format"
  }
}
